<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius = "@dimen/medium"
    card_view:cardElevation="@dimen/xxx_small"
    android:layout_marginBottom="@dimen/xx_small"
    android:layout_width = "match_parent"
    card_view:contentPadding="@dimen/xx_small"
        android:layout_margin="@dimen/xx_small"
    card_view:cardBackgroundColor="@color/primary_dark_lighter"
    android:layout_height = "wrap_content">


    <RelativeLayout
        android:padding="@dimen/xx_small"
        android:id="@+id/rl_followRequestCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_element_cell_back">

    <ImageView
        android:layout_marginStart="@dimen/xx_large"
        android:id="@+id/iv_profilePhoto"
        android:layout_width="@dimen/medium_photo"
        android:layout_height="@dimen/medium_photo"
        android:src="@drawable/ic_o_logo"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_toEndOf="@id/iv_profilePhoto"
        android:id="@+id/name_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_str"
        android:layout_toStartOf="@+id/accept_icon"
        android:textColor="@color/primary_light"
        android:textSize="@dimen/title_text_size_smaller" />

    <TextView
        android:layout_marginTop="@dimen/xx_small"
        android:id="@+id/tv_dateTime"
        android:layout_alignStart="@id/name_block"
        android:layout_width="wrap_content"
        android:layout_below="@+id/name_block"
        android:layout_height="wrap_content"
        android:text="@string/loading_str"
        android:textColor="@color/primary_dark_darker"
        android:textSize="@dimen/subtitle_text_size"
        />


    <ImageView

        android:id="@+id/accept_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_24dp"
        android:layout_toStartOf="@id/reject_icon" />

    <ImageView

        android:layout_alignParentEnd="true"
        android:id="@+id/reject_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_24dp" />


</RelativeLayout>
</androidx.cardview.widget.CardView>
