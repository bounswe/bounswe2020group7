<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_back"
    tools:context=".page.activity.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:background="@drawable/view_back"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/inner_frame_layout_padding_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/alread_have_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/already_have_str"
            android:textColor="@color/primary_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/firstname_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/firstName_str"
                android:inputType="textPersonName|textAutoComplete"
                android:textColor="@color/primary_dark"
                android:textColorHighlight="@color/primary_dark"
                android:textColorHint="@color/primary_dark_lighter"
                android:textColorLink="@color/primary_dark_lighter" />

            <EditText
                android:id="@+id/lastname_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="15"
                android:hint="@string/lastName_str"
                android:inputType="textPersonName"
                android:textColor="@color/primary_dark"
                android:textColorHighlight="@color/primary_dark"
                android:textColorHint="@color/primary_dark_lighter"
                android:textColorLink="@color/primary_dark_lighter" />
        </LinearLayout>

        <EditText
            android:id="@+id/mail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="15"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:textColor="@color/primary_dark"
            android:textColorHighlight="@color/primary_dark"
            android:textColorHint="@color/primary_dark_lighter"
            android:textColorLink="@color/primary_dark_lighter" />

        <EditText
            android:id="@+id/pw1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="15"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:textColor="@color/primary_dark"
            android:textColorHighlight="@color/primary_dark"
            android:textColorHint="@color/primary_dark_lighter"
            android:textColorLink="@color/primary_dark_lighter" />

        <EditText
            android:id="@+id/pw2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="15"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:textColor="@color/primary_dark"
            android:textColorHighlight="@color/primary_dark"
            android:textColorHint="@color/primary_dark_lighter"
            android:textColorLink="@color/primary_dark_lighter" />

        <CheckBox
            android:id="@+id/terms_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/acceptterms_str"
            android:textColor="@color/primary_dark_lighter" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:backgroundTint="@color/primary_dark"
            android:text="@string/register_str"
            android:textColor="@color/primary_light" />

    </LinearLayout>
</ScrollView>

