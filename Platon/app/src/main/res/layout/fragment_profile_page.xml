<?xml version="1.0" encoding="utf-8"?>
<ScrollView     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/name_block"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/profile_page_margin"
            android:layout_marginTop="@dimen/profile_page_margin"
            android:layout_marginEnd="@dimen/profile_page_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile_photo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/profile_page_margin"
                android:layout_marginTop="@dimen/profile_page_margin"
                android:layout_marginBottom="@dimen/profile_page_margin"
                android:contentDescription="ProfilePhoto"
                app:layout_constraintBottom_toTopOf="@id/button_edit_profile"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button_followers"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/button_followers"
                app:layout_constraintStart_toStartOf="@id/button_followers"
                app:layout_constraintEnd_toEndOf="@id/button_following"
                app:layout_constraintBottom_toTopOf="@id/button_edit_profile"
                android:layout_margin="@dimen/profile_margin_half"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/text_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No ratings yet"
                    android:textColor="@color/primary_dark"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/firstStarYellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <ImageView
                    android:id="@+id/secondStarYellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_on" />
                <ImageView
                    android:id="@+id/thirdStarYellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_on" />
                <ImageView
                    android:id="@+id/forthStarYellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_on" />
                <ImageView
                    android:id="@+id/fifthStarYellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <ImageView
                    android:id="@+id/firstGrayStar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_off" />
                <ImageView
                    android:id="@+id/secondGrayStar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_off" />
                <ImageView
                    android:id="@+id/thirdGrayStar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_off" />
                <ImageView
                    android:id="@+id/forthGrayStar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_off" />
                <ImageView
                    android:id="@+id/fifthGrayStar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/btn_star_big_off" />
            </LinearLayout>

            <Button
                android:id="@+id/button_followers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/profile_page_margin"
                android:layout_marginEnd="@dimen/profile_margin_half"
                android:layout_marginBottom="@dimen/profile_page_margin"
                android:text="@string/text_follower"
                android:background="@drawable/item_background_border"
                app:layout_constraintTop_toBottomOf="@id/text_name_surname"
                app:layout_constraintStart_toEndOf="@id/profile_photo"
                app:layout_constraintBottom_toTopOf="@id/button_edit_profile"
                app:layout_constraintEnd_toStartOf="@id/button_following"/>

            <Button
                android:id="@+id/button_following"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/button_followers"
                app:layout_constraintTop_toTopOf="@id/button_followers"
                app:layout_constraintBottom_toBottomOf="@id/button_followers"
                android:background="@drawable/item_background_border"
                android:text="@string/text_following"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"

                tools:layout_editor_absoluteY="30dp" />


            <Button
                android:id="@+id/button_edit_profile"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@color/secondary_purple"
                android:text="@string/text_edit_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_photo" />

            <TextView
                android:id="@+id/text_name_surname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Suzan Uskudarli"
                android:textColor="@color/primary_dark"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/button_followers"
                app:layout_constraintLeft_toLeftOf="@id/button_followers"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/profile_photo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_profile_page_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/profile_page_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_block"
            app:layout_constraintVertical_bias="0.6" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>