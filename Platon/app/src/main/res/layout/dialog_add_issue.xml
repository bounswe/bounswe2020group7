<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_gravity="center"
    android:background="@drawable/view_back_darker"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/inner_frame_layout_padding_2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <EditText
        android:id="@+id/issue_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints=""
        android:backgroundTint="@color/secondary_purple"
        android:hint="@string/issue_title_str"
        android:inputType="textPersonName|textAutoComplete"
        android:textColor="@color/primary_light"
        android:textColorHighlight="@color/primary_light"
        android:textColorHint="@color/secondary_purple"
        android:textColorLink="@color/secondary_purple" />


    <EditText
        android:id="@+id/issue_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:backgroundTint="@color/secondary_purple"
        android:ems="15"
        android:singleLine="false"
        android:scrollbars="vertical"
        android:hint="@string/issue_description_str"
        android:inputType="textMultiLine"
        android:lines="3"
        android:textColor="@color/primary_light"
        android:textColorHighlight="@color/primary_light"
        android:textColorHint="@color/secondary_purple"
        android:textColorLink="@color/secondary_purple" />


    <EditText
        android:id="@+id/issue_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/secondary_purple"
        android:ems="10"
        android:hint="@string/deadline_str"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@color/primary_light"
        android:textColorHighlight="@color/primary_light"
        android:textColorHint="@color/secondary_purple"
        android:textColorLink="@color/secondary_purple" />

    <Button
        android:id="@+id/button_issue_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:backgroundTint="@color/secondary_purple"
        android:text="@string/issue_add_str"
        android:textColor="@color/primary_light" />

</LinearLayout>

