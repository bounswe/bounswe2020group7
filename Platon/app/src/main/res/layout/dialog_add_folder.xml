<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/xx_large"
    android:orientation="vertical"
    android:padding="@dimen/xx_large"
    android:background="@color/primary_dark_darker"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_newFolderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_light"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/folder_name_str"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_add_folder"
        android:layout_width="match_parent"
        android:text="@string/add_str"
        android:layout_height="wrap_content"/>
</LinearLayout>