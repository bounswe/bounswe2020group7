<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background_border">

    <ImageView
        android:id="@+id/profile_page_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/profile_page_margin"
        app:layout_constraintBottom_toBottomOf="@id/text_profile_page_info_title"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_profile_page_info_title"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/text_profile_page_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_page_margin"
        android:layout_marginTop="@dimen/profile_margin_half"
        android:layout_marginEnd="@dimen/profile_page_margin"
        android:text=""
        android:textColor="@color/secondary_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_page_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_profile_page_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_light"
        android:layout_marginStart="@dimen/profile_page_margin"
        android:layout_marginTop="@dimen/profile_margin_half"
        android:layout_marginEnd="@dimen/profile_page_margin"
        android:layout_marginBottom="@dimen/profile_margin_half"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_profile_page_info_title" />
</androidx.constraintlayout.widget.ConstraintLayout>
