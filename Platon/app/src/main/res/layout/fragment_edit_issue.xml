<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/view_back_darker"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/inner_frame_layout_padding_2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <EditText
        android:id="@+id/issue_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints=""
        android:backgroundTint="@color/secondary_blue"
        android:hint="@string/workspace_title_str"
        android:inputType="textPersonName|textAutoComplete"
        android:textColor="@color/primary_light"
        android:textColorHighlight="@color/secondary_blue"
        android:textColorHint="@color/secondary_blue"
        android:textColorLink="@color/secondary_blue" />

    <EditText
        android:id="@+id/issue_description_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints=""
        android:backgroundTint="@color/secondary_blue"
        android:hint="@string/desc_str"
        android:inputType="textMultiLine"
        android:lines="5"
        android:textColor="@color/primary_light"
        android:textColorHighlight="@color/secondary_blue"
        android:textColorHint="@color/secondary_blue"
        android:textColorLink="@color/secondary_blue" />


    <EditText
        android:id="@+id/issue_deadline_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints=""
        android:ems="15"
        android:backgroundTint="@color/secondary_blue"
        android:hint="@string/deadline_str"
        android:inputType="date"
        android:textColor="@color/primary_light"
        android:textColorHighlight="@color/secondary_blue"
        android:textColorHint="@color/secondary_blue"
        android:textColorLink="@color/secondary_blue" />






</LinearLayout>

