<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:fillViewport="true"
    tools:context=".page.activity.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_regular"
            android:lineSpacingExtra="6sp"
            android:padding="3dp"
            android:text="Hello!"
            android:textColor="@color/primary_dark"
            android:textStyle="bold"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:lineSpacingExtra="6sp"
            android:padding="3dp"
            android:text="Welcome to the home page prepared for guests. You can check out everything that is public. If you want more, please join us with a few steps."
            android:textColor="@color/primary_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/trending_project_cell_back"
            android:padding="@dimen/xx_small"
            android:paddingHorizontal="@dimen/title_logo_padding"
            android:text="@string/trending_projects_str"
            android:textAllCaps="false"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/project_title_text_size"
            app:drawableLeftCompat="@drawable/ic_work_24px" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pre_login_trending_projects_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xx_small">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/upcoming_event_cell_back"
            android:padding="@dimen/xx_small"
            android:paddingHorizontal="@dimen/title_logo_padding"
            android:text="@string/upcoming_events_str"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/project_title_text_size"
            app:drawableLeftCompat="@drawable/ic_profile_24px" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pre_login_upcoming_events_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xx_small" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x_large"
            android:gravity="center"
            android:text="--EOF--" />


    </LinearLayout>

</ScrollView>